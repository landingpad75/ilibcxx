#pragma once

extern "C" {
    #include <stdlib.h>
}

namespace std {

template<typename T>
class vector {
private:
    T* data_;
    size_t size_;
    size_t capacity_;
    
    void reserve_internal(size_t new_cap) {
        if (new_cap <= capacity_) return;
        
        T* new_data = new T[new_cap];
        for (size_t i = 0; i < size_; i++) {
            new_data[i] = static_cast<T&&>(data_[i]);
        }
        if (data_) delete[] data_;
        data_ = new_data;
        capacity_ = new_cap;
    }
    
public:
    vector() : data_(nullptr), size_(0), capacity_(0) {}
    
    vector(size_t count) : data_(nullptr), size_(0), capacity_(0) {
        reserve_internal(count);
        for (size_t i = 0; i < count; i++) {
            new (&data_[i]) T();
        }
        size_ = count;
    }
    
    vector(const vector& other) : data_(nullptr), size_(0), capacity_(0) {
        reserve_internal(other.size_);
        for (size_t i = 0; i < other.size_; i++) {
            new (&data_[i]) T(other.data_[i]);
        }
        size_ = other.size_;
    }
    
    vector(vector&& other) noexcept : data_(other.data_), size_(other.size_), capacity_(other.capacity_) {
        other.data_ = nullptr;
        other.size_ = 0;
        other.capacity_ = 0;
    }
    
    ~vector() {
        if (data_) {
            for (size_t i = 0; i < size_; i++) {
                data_[i].~T();
            }
            delete[] data_;
        }
    }
    
    vector& operator=(const vector& other) {
        if (this != &other) {
            clear();
            reserve_internal(other.size_);
            for (size_t i = 0; i < other.size_; i++) {
                new (&data_[i]) T(other.data_[i]);
            }
            size_ = other.size_;
        }
        return *this;
    }
    
    vector& operator=(vector&& other) noexcept {
        if (this != &other) {
            if (data_) {
                for (size_t i = 0; i < size_; i++) {
                    data_[i].~T();
                }
                delete[] data_;
            }
            data_ = other.data_;
            size_ = other.size_;
            capacity_ = other.capacity_;
            other.data_ = nullptr;
            other.size_ = 0;
            other.capacity_ = 0;
        }
        return *this;
    }
    
    T& operator[](size_t pos) { return data_[pos]; }
    const T& operator[](size_t pos) const { return data_[pos]; }
    
    T* data() { return data_; }
    const T* data() const { return data_; }
    
    size_t size() const { return size_; }
    size_t capacity() const { return capacity_; }
    bool empty() const { return size_ == 0; }
    
    void push_back(const T& value) {
        if (size_ >= capacity_) {
            reserve_internal(capacity_ == 0 ? 8 : capacity_ * 2);
        }
        new (&data_[size_++]) T(value);
    }
    
    void push_back(T&& value) {
        if (size_ >= capacity_) {
            reserve_internal(capacity_ == 0 ? 8 : capacity_ * 2);
        }
        new (&data_[size_++]) T(static_cast<T&&>(value));
    }
    
    void pop_back() {
        if (size_ > 0) {
            data_[--size_].~T();
        }
    }
    
    void clear() {
        for (size_t i = 0; i < size_; i++) {
            data_[i].~T();
        }
        size_ = 0;
    }
    
    T& front() { return data_[0]; }
    const T& front() const { return data_[0]; }
    
    T& back() { return data_[size_ - 1]; }
    const T& back() const { return data_[size_ - 1]; }
    
    T* begin() { return data_; }
    const T* begin() const { return data_; }
    
    T* end() { return data_ + size_; }
    const T* end() const { return data_ + size_; }
};

}
